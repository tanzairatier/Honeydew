root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{cs,csproj}]
# C#: use primary constructors where applicable
dotnet_diagnostic.IDE0290.severity = suggestion

# C#: always use braces for if/else/for/foreach/while/do
dotnet_diagnostic.IDE0011.severity = suggestion
csharp_prefer_braces = true:suggestion

# C#: prefer collection expressions / simplified init where applicable
dotnet_diagnostic.IDE0028.severity = suggestion
dotnet_diagnostic.IDE0300.severity = suggestion

# C#: avoid unnecessary assignments (use discard _ where appropriate)
dotnet_diagnostic.IDE0059.severity = suggestion

# C#: prefer XML doc comments for public APIs when documenting
dotnet_diagnostic.IDE1591.severity = none

[*.{json,md,yml,yaml}]
indent_size = 2
